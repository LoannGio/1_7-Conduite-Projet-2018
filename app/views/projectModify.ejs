<!DOCTYPE html>
<html>
    <%- include('partials/head.ejs', {title: title}); %>
  <body>

  <%- include('partials/navbar.ejs', {title: 'Project Manager', user: user}); %>

   <main role="main" class="container">

    <div class="row">
      <h1 class="mt-5"><%= title %></h1>
    </div>

    <div class="row">
      <form id="createForm" action="/project/byId/<%= project.uid %>/modify" method="post">


        <p>Nom : <input id="projectName" class="form-control" type="text" name="name"  style="width:600px;" value="<%=project.name%>" required/></p>
        <span>Description : <span/>
        <textarea class="form-control" id="projectDescr" placeholder="Description" name="description" rows="3" style="width:600px;" ><%=project.description%></textarea>

        <p>Dur√©e d'un sprint (jours) : <input id="projectSprintDur" class="form-control" type="number" min="1" name="sprintDur" style="width:70px;" value="<%=project.sprintDur%>" required/></p>

        <input class="btn btn-primary m-1" type="submit" name="submitter" value="Apply">

      </form>
    </div>

    <div class="row">
      <form id="createForm" action="/project/byId/<%= project.uid %>/delete" method="delete">
        <input class="btn btn-danger m-1" type="submit" name="submitter" value="Delete">
      </form>
    </div>


  </main>

  <% include partials/footer %>
  <% include partials/scripts %>

  </body>
</html>
